<%= form_for(location, html: { class: "form-horizontal" }) do |f| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "Description of your location" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address_1, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address_1, class: "form-control", placeholder: "Address 1" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address_2, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address_2, class: "form-control", placeholder: "Address 2" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: "form-control", placeholder: "City" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, class: "form-control", placeholder: "State" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :postcode, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :postcode, class: "form-control", placeholder: "Postcode" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :musical_instrument, "Musical Instrument", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :musical_instrument, class: "form-control", placeholder: "Musical Instrument" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :night_rate, "Night Rate", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :night_rate, class: "form-control", placeholder: "Night Rate in Euro" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :guests, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :guests, class: "form-control", placeholder: "Number of Guests" %>
    </div>
  </div>

  <%= f.hidden_field :member_id, value: current_member.id %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
